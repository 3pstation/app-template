DIR=${PWD##*/}
pushd .
cd src

egrep -lr "\APP_NAME" . | xargs -l sed -i -e 's@APP_NAME@'"$1"'@'

for FILE in *.as ; do 
  NEWFILE=$(echo $FILE | sed -e's/APP_NAME/'"$1"'/g'); 
  mv $FILE $NEWFILE ; 
done

popd

egrep -lr "\APP_NAME" deploy.appstore | xargs -l sed -i -e 's@APP_NAME@'"$1"'@'
egrep -lr "\APP_NAME" build.gradle | xargs -l sed -i -e 's@APP_NAME@'"$1"'@'